<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_phone_verification"
    android:paddingTop="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    tools:context="co.kartoo.app.cards.suggestioncard.applycard.PhoneVerificationActivity">
    <ScrollView
        android:foregroundGravity="center"
        android:scrollbars="none"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:foregroundGravity="center"
            android:layout_gravity="center"
            android:gravity="center"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:background="@drawable/pct_reset_pass"
                android:layout_width="150dp"
                android:layout_height="170dp"
                android:id="@+id/imageView2"
                android:layout_gravity="center_horizontal"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:textSize="17sp"
                android:textStyle="bold"
                android:textColor="#fff"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Enter your Verification Code"
                android:id="@+id/textView27"
                android:layout_below="@+id/imageView2"
                android:layout_centerHorizontal="true" />

            <TextView
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:gravity="center"
                android:lines="2"
                android:layout_marginTop="10dp"
                android:textColor="#fff"
                android:textSize="17sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="KIta barusan mengirim kode verifikasi ke nomer lu"
                android:id="@+id/textView32"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/textView27"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:textColorHint="#fff"
                android:textColor="#fff"
                android:gravity="center"
                android:hint="Your Verification Code"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="text"
                android:ems="10"
                android:id="@+id/mETotp"
                android:layout_gravity="center_horizontal"
                android:layout_below="@+id/textView32"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <LinearLayout
                android:gravity="bottom"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <Button
                    android:layout_marginRight="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginBottom="16dp"
                    style="@style/BtnCoral"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Verify"
                    android:id="@+id/mBtnVerify"
                    android:layout_gravity="center_horizontal"
                    android:layout_above="@+id/textView33"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</RelativeLayout>
