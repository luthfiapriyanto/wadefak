<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_marginRight="16dp"
        android:id="@+id/mIVcard"
        android:layout_width="120dp"
        android:layout_height="80dp" />

    <TextView
        android:textSize="17sp"
        android:textStyle="bold"
        android:text="Loading..."
        android:id="@+id/mTVname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/mIVcard"
        android:layout_toEndOf="@+id/mIVcard" />

    <TextView
        android:layout_marginTop="8dp"
        android:text="Loading..."
        android:id="@+id/mTVperks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mTVincome"
        android:layout_toRightOf="@+id/mIVcard"
        android:layout_toEndOf="@+id/mIVcard" />

    <TextView
        android:layout_marginRight="5dp"
        android:id="@+id/text"
        android:text="Min Income "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mTVname"
        android:layout_toRightOf="@+id/mIVcard"
        android:layout_toEndOf="@+id/mIVcard" />

    <TextView
        android:textSize="12sp"
        android:text="Loading..."
        android:id="@+id/mTVincome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text"
        android:layout_toRightOf="@+id/text"
        android:layout_toEndOf="@+id/text" />

</RelativeLayout>